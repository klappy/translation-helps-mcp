if ! git diff --cached --quiet; then
  echo "ğŸ”§ Formatting changes staged for push."
fi

# Quick build to catch obvious issues
echo "ğŸ—ï¸ Building..."
npm run build >/dev/null 2>&1 || {
  echo "âŒ Build failed. Aborting push."
  exit 1
}

# Optional: a light test suite (avoid long runs on push)
echo "ğŸ§ª Running smoke tests..."
npm run test:smoke >/dev/null 2>&1 || {
  echo "âŒ Smoke tests failed. Aborting push."
  exit 1
}

echo "âœ… Pre-push checks passed!"

