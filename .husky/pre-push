#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

# Ensure formatting is clean before push
echo "🧹 Running Prettier (full repo) before push..."
npm run format >/dev/null 2>&1 || true
git add -A
if ! git diff --cached --quiet; then
  echo "🔧 Formatting changes staged for push."
fi

# Quick build to catch obvious issues
echo "🏗️ Building..."
npm run build >/dev/null 2>&1 || {
  echo "❌ Build failed. Aborting push."
  exit 1
}

# Optional: a light test suite (avoid long runs on push)
echo "🧪 Running smoke tests..."
npm run test:smoke >/dev/null 2>&1 || {
  echo "❌ Smoke tests failed. Aborting push."
  exit 1
}

echo "✅ Pre-push checks passed!"

