#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

# Prettier already ran in pre-commit, no need to run again

# Quick build to catch obvious issues
echo "🏗️ Building..."
npm run build >/dev/null 2>&1 || {
  echo "❌ Build failed. Aborting push."
  exit 1
}

# Optional: a light test suite (avoid long runs on push)
echo "🧪 Running smoke tests..."
npm run test:smoke >/dev/null 2>&1 || {
  echo "❌ Smoke tests failed. Aborting push."
  exit 1
}

echo "✅ Pre-push checks passed!"

